{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/register", "destination": "/index.html" },
    { "source": "/blogs", "destination": "/index.html" },
    { "source": "/create-blog", "destination": "/index.html" },
    { "source": "/my-blogs", "destination": "/index.html" },
    {
      "source": "/blogs/:blogId",
      "destination": "/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://blogs-eyj8.onrender.com/api/$1"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
